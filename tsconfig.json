{
	"extends": ["@tsconfig/strictest"],
	"include": ["./app/**/*.ts", "./tests/**/*.ts"],
	"compilerOptions": {
		"target": "es2023",
		"lib": ["ES2023"],
		"types": ["node"],

		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"verbatimModuleSyntax": true,

		"outDir": "dist",
		"sourceMap": true,

		"paths": {
			"#app/*": ["./app/*"],
			"#tests/*": ["./tests/*"]
		}
	}
}
